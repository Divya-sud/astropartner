        <TextView
            android:text="Upload Aadhaar Card"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgAadhaar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Aadhaar Image Preview" />

        <Button
            android:id="@+id/btnUploadAadhaar"
            android:text="Select Aadhaar Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- PAN Upload -->
        <TextView
            android:text="Upload PAN Card"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPan"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#E0E0E0"
            android:contentDescription="PAN Image Preview"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnUploadPan"
            android:text="Select PAN Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Selfie Upload -->
        <TextView
            android:text="Upload Selfie"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgSelfie"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#E0E0E0"
            android:contentDescription="Selfie Preview"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnUploadSelfie"
            android:text="Take Selfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Submit/Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:text="Register"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF" />

    </LinearLayout>
